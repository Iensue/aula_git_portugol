programa
{
    funcao inicio()
    {
        inteiro n1, n2, soma, subtracao

        escreva("Digite o primeiro número: ")
        leia(n1)

        escreva("Digite o segundo número: ")
        leia(n2)

        soma = n1 + n2
        subtracao = n1 - n2

        escreva("A soma é: ", soma, "\n")
        escreva("A subtração é: ", subtracao)
    }
}
